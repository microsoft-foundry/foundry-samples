{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "account_mkurup": {
            "defaultValue": "proj-mkurup",
            "type": "String"
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.CognitiveServices/accounts",
            "apiVersion": "2025-10-01-preview",
            "name": "[parameters('account_mkurup')]",
            "location": "uaenorth",
            "sku": {
                "name": "S0"
            },
            "kind": "AIServices",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "apiProperties": {},
                "customSubDomainName": "[parameters('account_mkurup')]",
                "networkAcls": {
                    "defaultAction": "Allow",
                    "virtualNetworkRules": [],
                    "ipRules": []
                },
                "allowProjectManagement": true,
                "defaultProject": "firstProject",
                "associatedProjects": [
                    "firstProject"
                ],
                "networkInjections": [
                    {
                        "scenario": "agent",
                        "subnetArmId": "",
                        "useMicrosoftManagedNetwork": true
                    }
                ],
                "publicNetworkAccess": "Enabled"
            }
        },
        {
            "type": "Microsoft.CognitiveServices/accounts/managednetworks",
            "apiVersion": "2025-10-01-preview",
            "name": "[concat(parameters('account_mkurup'),'/default')]",
            "dependsOn": [
                "[resourceId('Microsoft.CognitiveServices/accounts', parameters('account_mkurup'))]"
            ],
            "properties": {
                "managedNetwork": {
                    "IsolationMode": "AllowOnlyApprovedOutbound",
                    "managedNetworkKind": "V2"
                }
            }
        }
    ]
}